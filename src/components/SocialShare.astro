---
// src/components/SocialShare.astro
interface Props {
    url: URL;
    title: string;
}
const { url, title } = Astro.props;
const encodedUrl = encodeURIComponent(url.href);
const encodedTitle = encodeURIComponent(title);
---
<div class="social-share">
    <strong>Compartir:</strong>
    <div class="social-share-links">
        <a href={`https://api.whatsapp.com/send?text=${encodedTitle}%20${encodedUrl}`} target="_blank" rel="noopener" aria-label="Compartir en WhatsApp" class="whatsapp">
            <i class="ph ph-whatsapp-logo"></i>
        </a>
        <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`} target="_blank" rel="noopener" aria-label="Compartir en LinkedIn" class="linkedin">
            <i class="ph ph-linkedin-logo"></i>
        </a>
        <a href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`} target="_blank" rel="noopener" aria-label="Compartir en X" class="x">
            <i class="ph ph-x-logo"></i>
        </a>
        </div>
</div>

<style>
    .social-share {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.75rem 1rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        font-family: var(--font-sans);
    }
    .social-share strong {
        font-weight: 600;
        color: var(--color-dark);
        font-size: 1rem;
    }
    .social-share-links {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    .social-share-links a {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        width: 42px;
        height: 42px;
        border-radius: 50%;
        border: 1px solid var(--color-border, #e0e0e0);
        color: var(--color-muted, #555);
        background-color: transparent;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
    }
    .social-share-links a i {
        font-size: 1.6rem;
        line-height: 1;
    }

    /* --- Efectos Hover --- */
    .social-share-links a.whatsapp:hover {
        background-color: #25D366;
        color: white;
        border-color: #25D366;
        transform: translateY(-2px);
    }
    .social-share-links a.linkedin:hover {
        background-color: #0A66C2;
        color: white;
        border-color: #0A66C2;
        transform: translateY(-2px);
    }
    .social-share-links a.x:hover {
        background-color: #000000;
        color: white;
        border-color: #000000;
        transform: translateY(-2px);
    }
</style>