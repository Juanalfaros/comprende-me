---
import { Image } from "astro:assets";
import type { CleanPost } from "../lib/contentful-utils";

interface Props {
    post: CleanPost;
    variant?: "default" | "featured";
}
const { post, variant = "default" } = Astro.props;

const formattedDate = new Date(post.publishedDate).toLocaleDateString("es-CL", {
    day: "2-digit",
    month: "2-digit",
    year: "numeric",
    timeZone: "UTC",
});
---

<a
    href={`/blog/${post.slug}`}
    class:list={["card", "blog-card", `blog-card--${variant}`]}
>
    <div class="image-blog-card">
        <Image
            src={post.image}
            alt={post.alt}
            width={post.imageWidth || 800}
            height={post.imageHeight || 600}
            quality={variant === "featured" ? 85 : 75}
            loading={variant === "featured" ? "eager" : "lazy"}
            decoding="async"
            transition:name={`blog-image-${post.slug}`}
        />
    </div>
    {
        variant === "featured" && (
            <div>
                <span class="featured-badge">Destacada</span>
            </div>
        )
    }

    <div class="blog-card-content">
        <div class="tags2">
            {post.tags.slice(0, 2).map((tag) => <span class="tag">{tag}</span>)}
        </div>
        <h3>{post.title}</h3>
        <div class="blog-card-meta">
            <time datetime={post.publishedDate}>{formattedDate}</time>
            <span>•</span>
            <span>{post.duration}</span>
        </div>
        <p>{post.excerpt}</p>

        {/* Estos se mostrarán/ocultarán con CSS según la variante */}

        <span class="read-more">Leer Más <i class="ph ph-arrow-right"></i></span
        >
    </div>
</a>

<style>
    /* ============================================
      --- ESTILO BASE (Común a ambas variantes) ---
      ============================================
    */

    .read-more {
        margin-top: auto;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        width: fit-content;
        padding-right: 1.1rem;
        padding-left: 1.1rem;
        background-color: var(--color-primary);
        color: var(--color-dark);
        transition: color 0.3s ease;
        font-size: 1rem;
        font-weight: 600;
    }

    .read-more:hover {
        color: var(--color-white);
    }

    /* Animación del ícono del botón */
    .read-more i {
        font-size: 1.3rem;
        transition: transform 0.3s ease-in-out;
    }

    .read-more:hover i {
        transform: rotate(-30deg);
    }

    .blog-card {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        border-radius: var(--border-web);
        overflow: hidden;
        border: 1px solid var(--color-border);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        background: var(--color-white);
        padding: 1.7rem;
        position: relative; /* <-- CAMBIO: Necesario para featured */
    }
    .blog-card-content {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        flex-grow: 1;
        padding: 0;
    }

    .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .image-blog-card {
        position: relative;
        width: 100%;
        overflow: hidden;
        border-radius: calc(var(--border-web) / 2);
        margin-bottom: 20px;
    }

    .image-blog-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .blog-card:hover .image-blog-card img {
        transform: scale(1.05);
    }

    /* Ocultamos esto por defecto para ambas variantes */
    .blog-card-meta,
    .read-more {
        display: none;
    }

    /* Y lo mostramos solo para la default */
    .blog-card--default .blog-card-meta,
    .blog-card--default .read-more {
        display: inline-flex;
    }
    .blog-card--default .blog-card-meta {
        display: flex;
    }

    /* ============================================
      --- VARIANTE: DEFAULT (Tarjetas pequeñas) ---
      ============================================
    */
    .blog-card--default {
        height: 100%;
    }

    .blog-card--default .image-blog-card {
        aspect-ratio: 16 / 10;
    }

    .blog-card--default .blog-card-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .blog-card--default h3 {
        font-family: var(--font-heading);
        font-size: 1.25rem;
        font-weight: 600;
        line-height: 1.3;
        color: var(--color-dark);
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-top: 10px;
    }

    .blog-card--default p {
        font-family: var(--font-sans);
        font-size: 0.9rem;
        color: var(--color-muted);
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
        margin-bottom: 40px;
    }

    .blog-card--default .blog-card-meta {
        font-size: 0.875rem;
        color: var(--color-primary-dark);
        font-weight: 500;
        margin-top: auto;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .blog-card--default .tags2 {
        margin-top: -65px;
        margin-left: 20px;
    }

    /* ============================================
      --- VARIANTE: FEATURED (Estilo Hero) ---
      ============================================
    */
    .blog-card--featured {
        /* position: relative; */ /* Movido a .blog-card base */
        aspect-ratio: 2 / 1;
        min-height: 450px;
        padding: 0; /* <-- CAMBIO: Sin padding en la tarjeta 'featured' */
    }

    .blog-card--featured .image-blog-card {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: 0;
        border-radius: var(--border-web);
        margin-bottom: 0;
    }

    .blog-card--featured .image-blog-card::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 70%;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.8) 0%,
            rgba(0, 0, 0, 0.4) 50%,
            transparent 100%
        );
        z-index: 1;
    }

    .blog-card--featured .blog-card-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 2;
        padding: 2.5rem;
        background: transparent;
    }

    .tags2 {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 1rem;
    }

    .featured-badge {
        position: absolute;
        top: 2rem;
        left: 2rem;
        background-color: var(--color-primary);
        color: var(--color-white);
        font-size: 1rem;
        font-weight: 600;
        padding: 0.45rem 1rem;
        border-radius: 9999px;
        z-index: 2;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .blog-card--featured h3 {
        color: var(--color-white);
        font-family: var(--font-heading);
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.1;
        margin: 0 0 0.75rem 0;
        max-width: 80%;
    }

    .blog-card--featured p {
        color: rgba(255, 255, 255, 0.95);
        font-family: var(--font-sans);
        font-size: 1.1rem;
        line-height: 1.6;
        max-width: 70%;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .blog-card--featured .tags2 {
        display: none; /* Ocultamos tags en el overlay de desktop */
    }

    /* ============================================
      ---         RESPONSIVE (Móvil)         ---
      ============================================
    */
    @media (max-width: 767px) {
        /* Ajuste para la tarjeta default en móvil */
        .blog-card {
            padding: 1.25rem; /* Menos padding en móvil */
        }
        .blog-card--default .tags2 {
            margin-top: -60px;
            margin-left: 15px;
        }

        .blog-card {
            width: 100%;
        }

        /* --- AJUSTES MÓVIL PARA FEATURED --- */
        /* Mantenemos el estilo "Hero" pero ajustamos tamaños */

        .blog-card--featured {
            min-height: 420px; /* Un poco menos alta */
            padding: 0; /* Aseguramos que no tenga padding */
        }

        .blog-card--featured .blog-card-content {
            padding: 1.5rem; /* Menos padding que en desktop */
        }

        .blog-card--featured .featured-badge {
            top: 1.5rem; /* Más cerca del borde */
            left: 1.5rem;
            font-size: 0.9rem; /* Un poco más pequeño */
            padding: 0.35rem 0.85rem;
        }

        .blog-card--featured h3 {
            font-size: 1.8rem; /* Más pequeño que 2.5rem de desktop */
            max-width: 90%;
        }

        .blog-card--featured p {
            font-size: 1rem; /* Más pequeño que 1.1rem de desktop */
            max-width: 90%;
        }
    }
</style>
