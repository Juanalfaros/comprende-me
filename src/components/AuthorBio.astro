---
// src/components/AuthorBio.astro
import { Image } from 'astro:assets';
import { authorData } from '../data/authorData.js';

// --- CORRECCIÓN AQUÍ ---
// La ruta ahora es relativa desde la carpeta 'components/'
const imagePath = `../assets/${authorData.image}`;
---
<div class="author-bio">
    <Image 
        src={import(imagePath)} 
        alt={`Foto de ${authorData.name}`} 
        width={100} 
        height={100} 
        quality={85}
    />
    <div>
        <h3>Escrito por {authorData.name}</h3>
        <p>{authorData.bio}</p>
    </div>
</div>