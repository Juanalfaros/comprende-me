---
import { servicesData } from "../data/servicesData.js";
import Logo from "./Logo.astro"; // <-- 1. Importamos el componente Logo

const currentYear = new Date().getFullYear();
---

<footer class="footer" transition:persist>
    <div class="container">
        <div class="footer-grid">
            <div class="footer-col">
                <a href="/" class="logo" title="Inicio - Comprende.me">
                    <Logo />
                </a>
                <p>
                    Apoyo psicológico para el bienestar de niños y adolescentes.
                </p>
            </div>
            <div class="footer-col">
                <h3>Navegación</h3>
                <ul>
                    <li><a href="/sobre-mi">Sobre mí</a></li>
                    <li><a href="/servicios">Servicios</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/#faq">FAQ</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h3>Servicios</h3>
                <ul>
                    {
                        servicesData.map((service) => (
                            <li>
                                <a href={`/servicios/${service.slug}`}>
                                    {service["short-title"] || service.title}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
            <div class="footer-col">
                <h3>Legal</h3>
                <ul>
                    <li>
                        <a href="/consentimiento">Consentimiento Informado</a>
                    </li>
                    <li><a href="/privacidad">Política de Privacidad</a></li>
                    <li><a href="/terminos">Términos de Servicio</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <h3>Contacto</h3>
                <div class="social-links">
                    <a
                        href="https://www.instagram.com/comprendeme.oficial/"
                        aria-label="Instagram"
                        target="_blank"
                        rel="noopener noreferrer"
                        ><i class="ph ph-instagram-logo"></i></a
                    >
                    <a
                        href="https://www.linkedin.com/in/natalia-beiza-calvo-53355a52/"
                        aria-label="LinkedIn"
                        target="_blank"
                        rel="noopener noreferrer"
                        ><i class="ph ph-linkedin-logo"></i></a
                    >
                    <a
                        href="mailto:contacto@comprende.me"
                        aria-label="Correo electrónico"
                        ><i class="ph ph-envelope"></i></a
                    >
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>
                &copy; {currentYear} comprende.me. Todos los derechos reservados.
            </p>
            <p class="developer-credit">
                Diseñado y desarrollado con <i class="ph-fill ph-heart"></i> por <a
                    href="https://www.behance.net/juanalfaro"
                    target="_blank"
                    rel="noopener noreferrer">Juan Alfaro</a
                >
            </p>
        </div>
    </div>
</footer>

<style>
    /* Footer */
    .footer {
        background-color: var(--color-white);
        border-top: 1px solid var(--color-border);
        padding: 2.5rem 0;
        font-size: 0.875rem;
    }

    .footer .logo svg {
        height: 2.2rem;
        cursor: pointer;
        margin-bottom: 1rem;
    }

    .footer .logo img {
        height: 3rem;
        cursor: pointer;
        margin-bottom: 1rem;
    }
    .footer-grid {
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(2, 1fr);
    }
    @media (min-width: 768px) {
        .footer-grid {
            grid-template-columns: 2fr repeat(4, 1fr);
        }
    }
    .footer-col > p {
        font-size: 0.875rem;
        overflow-wrap: anywhere;
    }

    .footer-col h3 {
        font-size: 1.125rem;
    }
    .footer-col ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .footer-col .social-links a:hover {
        color: var(--color-primary);
        transform: scale(1.15) rotate(5deg);
        transition:
            transform 0.5s ease-in-out,
            color 0.5s ease-in-out;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        font-size: 1.5rem;
    }
    .footer-bottom {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-primary);
        text-align: center;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    h3 {
        margin-bottom: 1.7rem;
        font-weight: 600;
        color: var(--color-primary-dark);
        line-height: 1.2;
    }

    .footer-bottom {
        margin-bottom: -2rem;
    }

    .footer-col a {
        color: var(--color-muted);
    }

    .ph-heart {
        color: var(--color-primary);
    }
</style>
