---
// src/components/ArticleCard.astro
interface Props {
    post: {
        slug: string;
        image: string;
        alt: string;
        duration: string;
        title: string;
        excerpt: string;
        tags: string[];
    }
}
const { post } = Astro.props;
---
<a href={`/blog/${post.slug}`} class="card blog-card">
    <img src={`/${post.image}`} alt={post.alt} />
    <div class="blog-card-content">
        <div class="blog-card-meta">
            <span>{post.duration}</span>
        </div>
        <h3>{post.title}</h3>
        <p>{post.excerpt}</p>
        <div class="tags">
            {post.tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
        <span class="read-more">Leer m√°s &rarr;</span>
    </div>
</a>