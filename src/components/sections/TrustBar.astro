<section id="trust-bar" class="section-trust">
    <div class="container">
        <div class="trust-grid">
            <div class="trust-item">
                <i class="ph ph-seal-check"></i>
                <div class="trust-text">
                    <p class="trust-title">Psicóloga Registrada</p>
                    <p>Sup. de Salud Nº 181707</p>
                </div>
            </div>
            <div class="trust-item">
                <i class="ph ph-briefcase"></i>
                <div class="trust-text">
                    <p class="trust-title">+12 Años de Experiencia</p>
                    <p>Apoyando a niños y familias</p>
                </div>
            </div>
            <div class="trust-item">
                <i class="ph ph-star"></i>
                <div class="trust-text">
                    <p class="trust-title">Especialista en Niños y Adolescentes</p>
                    <p>Enfoque Cognitivo Conductual</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.section-trust {
    padding: 2.5rem 0;
    background-color: var(--color-white); /* O var(--color-light) si prefieres un contraste sutil */
    border-bottom: 1px solid var(--color-border);
}

.trust-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
}

.trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.trust-item i {
    font-size: 2.25rem;
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    width: 2.5rem;   /* Un poco más grande que el font-size */
    height: 2.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

.trust-text .trust-title {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-dark);
    margin-bottom: 0.2rem;
    line-height: 1.2;
    font-weight: 600;
}

.trust-text p {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin-bottom: 0;
}

/* --- Media Query para Escritorio --- */
@media (min-width: 768px) {
    .trust-grid {
        /* Se adapta automáticamente a 2 o 3 columnas */
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        text-align: left;
    }
    
    .trust-item {
        flex-direction: row; /* Pone el ícono al lado del texto */
        gap: 1rem;
    }

    .trust-item i {
        font-size: 2.5rem;
        margin-bottom: 0;
    }
}
</style>