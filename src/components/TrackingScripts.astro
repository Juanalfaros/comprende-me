---
// src/components/TrackingScripts.astro
const gtmId = import.meta.env.PUBLIC_GTM_ID;
---
{gtmId && (
    <script is:inline define:vars={{ gtmId }}>
        // Esta función carga el script principal de GTM en el <head>
        function loadGtmScript() {
            // Verificamos si el script ya se ejecutó para evitar duplicados
            if (window.gtmDidRun) {
                return;
            }
            window.gtmDidRun = true;
            
            console.log(`Consentimiento aceptado. Cargando GTM ID: ${gtmId}`);
            
            (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer',gtmId);
        }

        // Escuchamos el evento de nuestro banner de cookies
        window.addEventListener('cookies-accepted', loadGtmScript);

        // También verificamos si el consentimiento ya existía al cargar la página
        if (localStorage.getItem('cookie_consent_accepted') === 'true') {
            loadGtmScript();
        }
    </script>
)}