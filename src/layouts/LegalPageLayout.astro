---
import Layout from './Layout.astro'; 

interface Props {
  title: string; 
  description?: string; // Sigue siendo opcional aquí
}
// ✅ Añade un fallback (valor por defecto)
const { title, description = "Información legal de Comprende.me" } = Astro.props; 
---
{/* Ahora 'description' siempre será un string */}
<Layout {title} {description}>
    <main class="main-class">
        <section class="section legal-section">
            <div class="container container-narrow legal-content">
                {/* El título principal de la página legal */}
                <h1 class="legal-title">{title}</h1>

                {/* Aquí se insertará el contenido específico de cada página */}
                <slot />
            </div>
        </section>
    </main>
</Layout>

<style>

    .main-class {
        margin-top: -65px;
    }
    .legal-section {
        background-color: var(--color-white);
        padding-top: 4rem;
        padding-bottom: 4rem;
    }
    .legal-content {
        max-width: 800px; /* Ancho consistente */
        margin: auto;
    }
    .legal-title { /* Estilo para el H1 principal */
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        /* Resetea estilos globales si es necesario */
        color: var(--color-dark);
        font-weight: 700;
    }

    /* Estilos extraídos de tus páginas (h2, p, li, ul) */
    /* Usamos :global() porque el contenido viene del <slot> */
    :global(.legal-content h2) {
        font-size: 1.5rem;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--color-border);
        /* Reseteo de estilos globales de h3 (ahora son h2) */
        color: var(--color-dark);
        font-weight: 700;
        max-width: none;
    }
    :global(.legal-content p), 
    :global(.legal-content li) {
        line-height: 1.7;
        font-size: 1.05rem; /* Ligeramente más grande */
        margin-bottom: 1rem;
    }
    :global(.legal-content ul) {
        list-style-position: inside;
        padding-left: 1rem;
        margin-bottom: 1rem;
    }
    :global(.legal-content ul ul) { /* Listas anidadas */
        padding-left: 2rem;
        margin-top: 0.5rem;
    }
    :global(.legal-content strong) {
        color: var(--color-dark);
        font-weight: 600;
    }
</style>